<div class="row">
  <div class="col-md-8">
    <h3>Products</h3>
    <% @products.each do |product| %>
      <div class="media">
        <div class="media-left media-middle">
          <a href="#">
            <img class="media-object" src="<%= image_path product.image.url %>" alt="<%= product.name %>">
          </a>
        </div>
        <div class="media-body">
          <h4 class="media-heading"><%= product.name %></h4>
          <p>
            <small>Created by</small> <strong><small><%= product.user.name %></small></strong>
          </p>
          <p><small><%= product.category.name %></small></p>
          <%= simple_format(product.description) %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-4">
    <h3>Categories</h3>
    <div class="list-group">
      <% Category.all.each do |category| %>
        <%= link_to category.name, products_path(category: category.name), class: "list-group-item" %>
      <% end %>
    </div>
  </div>
</div>
