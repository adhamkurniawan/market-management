<div class="row">
  <div class="col-md-8">
    <h3>Products</h3>
    <% @products.each do |product| %>
      <div class="media">
        <div class="media-left">
          <a href="#">
            <img class="media-object" width="200" height="200" src="<%= cl_image_path(product.image, :secure => true) %>" alt="<%= product.name %>">
          </a>
        </div>
        <div class="media-body">
          <h4 class="media-heading">
            <%= product.name %>
            <% if product.user == current_user -%>
              <%= link_to product_path(product), method: :delete, data: {confirm: "Are you sure?"} do %>
                <%= fa_icon "trash", class: "pull-right dark" %>
              <% end %>

              <%= link_to edit_product_path(product) do %>
                <%= fa_icon "pencil", class: "pull-right dark" %>
              <% end %>
            <% end %>
          </h4>
          <p>
            <span class="text-capitalize"><%= time_ago_in_words(product.created_at) %></span> by <strong><%= product.user.name %></strong>
            <br>
            <small>Category: <strong><%= product.category.name %></strong></small>
          </p>
          <%= simple_format(product.description) %>

        </div>
      </div>
    <% end %>
    <div class="digg_pagination">
      <%= will_paginate @products, :container => false %>
    </div>
  </div>

  <div class="col-md-4">
    <h3>Categories</h3>
    <div class="list-group">
      <% Category.all.each do |category| %>
        <%= link_to products_path(category: category.name), class: "list-group-item" do %>
          <span class="badge">
            <%= category.products.count %>
          </span>
          <%= category.name %>
        <% end %>
      <% end %>
    </div>

    <h3>Users</h3>
    <div class="list-group">
      <% @users.each do |user| %>
        <%= link_to user_path(user), class: "list-group-item" do %>
          <span class="badge">
            <%= user.products.count %>
          </span>
          <%= user.name %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
